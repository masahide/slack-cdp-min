{
  "name": "reaclog",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx scripts/dev.ts",
    "serve": "tsx scripts/serve.ts",
    "start": "tsx src/index.ts",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:browser": "pnpm --filter browser build",
    "build:runtime": "pnpm run build:backend && pnpm run build:browser",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "bash -lc 'files=$(find tests -type f -name \"*.test.ts\"); if [ -z \"$files\" ]; then echo \"No tests found\"; exit 1; fi; node --import tsx --test $files'",
    "test:slack": "node --import tsx --test \"tests/slack/**/*.test.ts\"",
    "qa": "pnpm run typecheck && pnpm run lint && pnpm run format && pnpm run test && pnpm --filter browser exec svelte-kit sync && pnpm --filter browser exec svelte-check && pnpm --filter browser exec tsc --noEmit && pnpm --filter browser test"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/chrome-remote-interface": "^0.31.14",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "chrome-remote-interface": "^0.33.3",
    "devtools-protocol": "^0.0.1541592",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.0",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
